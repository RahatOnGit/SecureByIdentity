@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" asp-action="DeleteRoleFinal" class="mt-3">
    <input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="RoleName" />

    <div class="fomr-group">
        <input asp-for="Id" disabled class="form-control"/>

    </div>

    <div class="form-group mt-2">
        <input asp-for="RoleName" disabled class="form-control"/>

    </div>

    <div class="form-group mt-2">
        <input asp-for="Description" disabled class="form-control" />

    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>